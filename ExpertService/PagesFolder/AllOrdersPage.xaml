<Page x:Class="ExpertService.PagesFolder.AllOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpertService.PagesFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllOrdersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель (Поиск и Excel) -->
            <RowDefinition Height="*"/>
            <!-- Таблица занимает все остальное место -->
            <RowDefinition Height="Auto"/>
            <!-- Нижняя панель (Удаление) -->
        </Grid.RowDefinitions>

        <!-- ВЕРХНЯЯ ПАНЕЛЬ -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Поиск растягивается -->
                <ColumnDefinition Width="Auto"/>
                <!-- Кнопка справа -->
            </Grid.ColumnDefinitions>

            <!-- Поле поиска -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Width="auto">
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="10,0,5,0" FontSize="14"/>
                <TextBox Name="TxtSearch" Width="300" Height="25" FontSize="14" 
                     VerticalContentAlignment="Center"
                     TextChanged="TxtSearch_TextChanged"/>
                <!-- TextChanged срабатывает, когда ты печатаешь буквы -->
            </StackPanel>

            <!-- Кнопка Экспорта -->
            <Button Name="BtnExportExcel" Grid.Column="1" Content="Экспорт в Excel" 
                Width="140" Height="30" Margin="10,0,10,0"
                Click="BtnExportExcel_Click" 
                Background="#2ecc71" Foreground="White" FontWeight="Bold"/>
        </Grid>

        <!-- ТАБЛИЦА (Твой DataGrid) -->
        <DataGrid Name="OrdersDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
              IsReadOnly="True" SelectionMode="Single"
              BorderThickness="1" BorderBrush="Gray">
            <DataGrid.Columns>
                <!-- ТУТ ТВОИ КОЛОНКИ, КОТОРЫЕ У ТЕБЯ УЖЕ БЫЛИ -->
                <!-- Пример: -->
                <DataGridTextColumn Header="№" Binding="{Binding OrderID}" Width="50"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding DateCreated, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Client.FullName}" Width="*"/>
                <DataGridTextColumn Header="Оборудование" Binding="{Binding Device.Model}" Width="150"/>
                <DataGridTextColumn Header="Неисправность" Binding="{Binding ProblemDescription}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- НИЖНЯЯ ПАНЕЛЬ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Button Name="BtnDelete" Content="Удалить выбранный заказ" 
                Width="250" Height="30" 
                Click="BtnDelete_Click"
                Background="#e74c3c" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
