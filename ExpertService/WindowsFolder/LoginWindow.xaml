<Window x:Class="ExpertService.WindowsFolder.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertService.WindowsFolder"
        mc:Ignorable="d"
        Title=" Эксперт | Авторизация " 
        Height="550" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <!-- СТИЛЬ ПОЛЕЙ ВВОДА (TextBox / PasswordBox) -->
    

    <!-- ГРАДИЕНТНЫЙ ФОН -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F0F8FF" Offset="0.0"/>
                <!-- Светло-голубой -->
                <GradientStop Color="#E0FFFF" Offset="1.0"/>
                <!-- Светло-бирюзовый -->
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Заголовок -->
            <TextBlock Text="Авторизация" 
                       FontSize="26" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="#333"/>

            <!-- Имя пользователя (Логин) -->
            <TextBlock Text="Логин (Имя пользователя)" Margin="0,0,0,5" FontSize="14" Foreground="#333"/>
            <TextBox Name="TxtLogin"/>
            <!-- Тег TextBox сам применяет стиль выше -->

            <!-- Пароль -->
            <TextBlock Text="Пароль" Margin="0,0,0,5" FontSize="14" Foreground="#333"/>
            <PasswordBox Name="PwdPassword" />
            <!-- Тег PasswordBox сам применяет стиль выше -->

            <!-- Кнопка Вход -->
            <Button Name="BtnLogin" Content="Войти" 
                    Height="45" 
                    FontSize="18" 
                    FontWeight="Bold"
                    Margin="0,10,0,50"
                    Click="LoginButton_Click"
                    Background="#007ACC" 
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
