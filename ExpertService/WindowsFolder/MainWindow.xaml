<Window x:Class="ExpertService.WindowsFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertService.WindowsFolder"
        mc:Ignorable="d"
        Title="Эксперт | Система управления заказами" 
        Height="1080" Width="1920"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Панель навигации -->
            <ColumnDefinition Width="*"/>
            <!-- Область контента -->
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации (Grid.Column="0") -->
        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Панель с кнопками навигации -->
                <StackPanel DockPanel.Dock="Top" Margin="10">
                    <Image Source="/Resources/Logo_1.png" Margin="5"/>
                    <TextBlock Text="Навигация" FontSize="16" FontWeight="Bold" Margin="10, 5, 10, 15" Foreground="#555"/>

                    <Button x:Name="OrdersButton" 
                            Content="Мои заказы"
                            Click="OrdersButton_Click" Margin="5"/>

                    <Button x:Name="PartsButton" 
                            Content="Склад запчастей"
                            Click="PartsButton_Click" Margin="5"/>

                    <Button x:Name="HelpButton" 
                            Content="Справочники"
                            Click="HelpButton_Click" Margin="5"/>

                    <Button x:Name="AddOrderButton" 
                            Content="Создать заказ"
                            Click="AddOrderButton_Click"
                            Visibility="Collapsed" Margin="5"/>

                    <Button x:Name="PersonnelButton" 
                        Content="Управление персоналом"
                        Click="PersonnelButton_Click"
                        Visibility="Collapsed" Margin="5"/>
                </StackPanel>

                <!-- Информация о пользователе внизу панели -->
                <StackPanel DockPanel.Dock="Bottom" Margin="10, 0, 10, 20" VerticalAlignment="Bottom">
                    <Separator Margin="0, 10"/>
                    <TextBlock Text="Мастер:" FontSize="12" Foreground="#777"/>
                    <TextBlock x:Name="MasterNameTextBlock" 
                               Text="Имя Мастера" 
                               FontSize="14" 
                               FontWeight="Bold"/>
                    <Button Content="Выйти" Margin="0,10,0,0" Click="LogoutButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Правая область для отображения страниц (Grid.Column="1") -->
        <Frame x:Name="MainFrame" 
               Grid.Column="1"
               NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
